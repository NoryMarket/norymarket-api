model SupplyType {
    id String @id @default(uuid())
    name String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt()
    deletedAt DateTime?

    quantityUnitId String
    quantityUnit QuantityUnit @relation(fields: [quantityUnitId], references: [id])

    colors Color[]
    sizes Size[]
    recipes BuildOfMaterialsRecipe[]
    supplies Supply[]

    @@schema("supplyType")
}

model QuantityUnit {
    id String @id @default(uuid())
    name String
    description String?
    shortName String
    allowDecimals Boolean @default(true)

    supplyTypes SupplyType[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt()
    deletedAt DateTime?

    @@schema("supplyType")
}

model Color {
    id String @id @default(uuid())
    name String
    color String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt()
    deletedAt DateTime?

    supplyTypes SupplyType[]
    supplies Supply[]
    orders OrderProducts[]

    @@schema("supplyType")
}

model Size {
    id String @id @default(uuid())
    name String
    shortName String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt()
    deletedAt DateTime?

    supplyTypes SupplyType[]
    supplies Supply[]
    orders OrderProducts[]

    @@schema("supplyType")
}
